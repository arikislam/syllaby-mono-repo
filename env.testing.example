# Laravel Testing Environment Configuration

APP_NAME=Syllaby
APP_ENV=testing
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8880

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Testing Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3906
DB_DATABASE=syllaby_testing
DB_USERNAME=syllaby
DB_PASSWORD=password

# Testing Redis
REDIS_HOST=localhost
REDIS_PORT=6930
REDIS_PASSWORD=null

# Testing Mail (MailHog)
MAIL_MAILER=smtp
MAIL_HOST=localhost
MAIL_PORT=1062
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="test@syllaby.local"
MAIL_FROM_NAME="${APP_NAME}"

# Testing Cache
CACHE_DRIVER=array
QUEUE_CONNECTION=sync
SESSION_DRIVER=array

# Testing Broadcasting
BROADCAST_DRIVER=log

# Testing Filesystem
FILESYSTEM_DISK=local

# Testing Services (use test values)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Testing specific settings
TELESCOPE_ENABLED=false
PULSE_ENABLED=false
